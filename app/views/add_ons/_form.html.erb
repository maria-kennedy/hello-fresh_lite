<%= form_with(model: add_on) do |form| %>
  <% if add_on.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(add_on.errors.count, "error") %> prohibited this add_on from being saved:</h2>

      <ul>
        <% add_on.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :servings, style: "display: block" %>
    <%= form.number_field :servings %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div>
    <%= form_for @add_on do |f| %>
      <%= f.label :category %>
      <%= f.select :category, AddOn.categories.keys.map { |w| [w.humanize, w] } %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
